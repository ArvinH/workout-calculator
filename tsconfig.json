{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6"
  },
  "include": [
    "./src/**/**/*"
  ],
  "exclude": [
    "index.android.js",
    "index.ios.js",
    "build",
    "node_modules",
    "./src/**/__tests__/*",
    "coverage"
  ],
}